                const ageValue = ageInput.value.trim();
                const sexValue = sexSelect.value.trim();
                const wardClinicValue = wardClinicInput.value.trim();
                const bedNumberValue = bedNumberInput.value.trim();
                const currentIpOpNumberValue = currentIpOpNumberInput.value.trim();
                const previousIpOpNumber1Value = previousIpOpNumber1Input.value.trim();
                const previousIpOpNumber2Value = previousIpOpNumber2Input.value.trim();
                const previousIpOpNumber3Value = previousIpOpNumber3Input.value.trim();
                const previousIpOpNumberSpecifyValue = previousIpOpNumberSpecifyInput.value.trim();
                const countyValue = document.getElementById('county').value.trim();;
                const subCountyValue = document.getElementById('subCounty').value.trim();
                const locationValue = document.getElementById('location').value.trim();
                const subLocationValue = document.getElementById('subLocation').value.trim();
