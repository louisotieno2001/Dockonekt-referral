                            designationInput.value = '';
                            phoneNumberInput.value = '';
                            departmentInput.value = '';
                            facilityInput.value = '';

                        }

                    } catch (error) {
                        console.error('Error:', error.message);
                    }
                }
            });


            const inputField1 = document.getElementById('facility');
            const suggestionsList1 = document.getElementById('suggestions1');

            inputField1.addEventListener('input', async function () {
                const userInput = this.value.trim();
                if (!userInput) {
                    suggestionsList1.innerHTML = ''; // Clear suggestions if input is empty
                    return;
                }

                try {
                    const response = await fetch('/facilities');
                    const facilitiesData = await response.json();
                    const facilityNames = facilitiesData.facilities.map(facility => facility.name.trim());

                    const matchedFacilities = facilityNames.filter(name => name.toLowerCase().includes(userInput.toLowerCase()));

                    // Display suggestions
                    suggestionsList1.innerHTML = '';
                    matchedFacilities.forEach(facility => {
                        const listItem = document.createElement('li');
                        listItem.textContent = facility;
                        suggestionsList1.appendChild(listItem);

                        // Add click event listener to list item
                        listItem.addEventListener('click', function () {
                            // Set the value of the Hospital name field
                            inputField1.value = facility;
                            // Clear suggestions
