<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Healthcare Registration</title>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #0c1e3e;
            /* Dark blue background */
            color: #fff;
            /* White text color */
        }

        .container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            max-width: 600px;
            width: 100%;
            padding: 2px;
            align-content: center;
            border-radius: 8px;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            padding: .8em;
        }

        button[type="submit"] {
            background-color: #00ffcc;
            color: #0c1e3e;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #00e6b8;
        }

        .input-div {
            border-radius: 15px;
            padding: .5em;
            background-color: rgba(0, 0, 0, 0.9);
            margin: 8px;
            display: flex;
            align-items: center;
            width: 500px;
            opacity: 90%;
            margin-left: -35px;
        }

        input {
            background: transparent;
            border: none;
            outline: none;
            font-size: larger;
            color: #00e676;
        }

        select {
            background: transparent;
            border: none;
            outline: none;
            font-size: larger;
            color: #00e676;
            width: 100%;
        }

        input:focus {
            border: none;
        }

        span {
            margin-right: 10px;
            /* color: #00e676; */
            color: #fff;
        }

        #pass-visibility {
            margin-left: 185px;
            cursor: pointer;
            background-color: rgba(0, 0, 0, 0.9);
            opacity: 90%;
            border-radius: 15px;
        }

        form {
            margin: 0 auto;
            width: 75%;
        }

        button {
            margin: 0 auto;
            width: 65%;
            margin-left: 70px;
            padding: 1em;
        }

        #login {
            color: #00e676;
            cursor: pointer;
        }

        h3 {
            text-align: center;
        }

        .suggestions-div {
            background-color: rgba(0, 0, 0, 0.9);
            opacity: 95%;
            border-radius: 8px;
            margin-top: -5px;
            z-index: 1000;
            position: fixed;
            width: 80%;
            max-height: 200px;
            overflow-y: auto;
        }

        #suggestions {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        #suggestions li {
            cursor: pointer;
            padding: 5px;
            margin: 15px;
            color: #00e676;
        }

        #suggestions li:hover {
            background-color: #535151;
            border-radius: 8px;
        }


        /* Styles for small screens */
        @media only screen and (max-width: 600px) {
            .container {
                padding: 1px;
                max-width: 330px;
            }

            .input-div {
                width: 90%;
                margin: 10px;
            }


            form {
                margin: 70 auto;
                width: 100%;
                margin-left: -5px;
            }

            #pass-visibility {
                margin-left: -35px;
                cursor: pointer;
            }

            button {
                margin: 2 auto;
                width: 65%;
                margin-left: 55px;
                padding: 1em;
                margin-bottom: 5px;
            }

            h3 {
                text-align: center;
                margin-left: 6px;
            }

            .suggestions-div {
                background-color: rgba(0, 0, 0, 0.9);
                opacity: 95%;
                border-radius: 8px;
                margin-top: -10px;
                z-index: 1000;
                position: fixed;
                width: 100%;
                max-height: 200px;
                overflow-y: auto;
            }

            .submenu {
                position: absolute;
                top: 100px;
                right: 2px;
                left: 0px;
                background-color: #0c1e3e;
                padding: 10px;
                display: none;
                width: 100%;
                z-index: 1500;
            }

        }
    </style>
</head>

<body>
    <div class="container">
        <h2>Healthcare Registration</h2>
        <form id="registrationForm" action="/county-register" method="POST">
            <div class="input-div">
                <span class="material-symbols-outlined">
                    account_circle
                </span>
                <input type="text" id="fullName" name="fullName" required placeholder="Name">
            </div>
            <div class="input-div">
                <span class="material-symbols-outlined">
                    mail
                </span>
                <input type="email" id="email" name="email" required placeholder="Email">
            </div>
            <div class="input-div">
                <span class="material-symbols-outlined">
                    phone_enabled
                </span>
                <input type="tel" name="phone" id="phone" placeholder="Phone" required>
            </div>
            <div class="input-div">
                <span class="material-symbols-outlined">
                    security
                </span>
                <input type="password" name="" id="password" placeholder="Password" required>
                <span class="material-symbols-outlined" id="pass-visibility">
                    visibility
                </span>
            </div>

            <button type="submit" id="submit">Register</button>
            <h3>Already have an account? <span id="login">Login</span></h3>
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const submitBtn = document.getElementById('submit');
            const toggleVisibility = document.getElementById('pass-visibility');
            const passField = document.getElementById('password');
            const loginLink = document.getElementById('login');

            submitBtn.addEventListener('click', async (e) => {
                e.preventDefault();

                const fullName = document.getElementById('fullName').value.trim();
                const email = document.getElementById('email').value.trim();
                const phone = document.getElementById('phone').value.trim();
                const password = document.getElementById('password').value.trim();

                // Validation
                if (!fullName || !email || !phone || !password) {
                    // If any field is empty, display an error message
                    alert('Please fill in all fields.');
                    return;
                }

                try {
                    const response = await fetch('/ministry-register', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            fullName: fullName,
                            email: email,
                            phone: phone,
                            password: password
                        })
                    });

                    console.log(response);

                    if (response.ok) {
                        alert('Registration successful!')
                        window.location.href = '/health/ministry/login';
                    } else {
                        // Registration failed
                        console.error('Registration failed:', response.statusText);
                        // Handle the error accordingly
                    }
                } catch (error) {
                    console.error('Error during registration:', error);
                    // Handle the error accordingly
                }
            });

            toggleVisibility.addEventListener('click', async (e) => {
                e.preventDefault();
                passField.type = passField.type === 'password' ? 'text' : 'password';
            });

            loginLink.addEventListener('click', async (e) => {
                e.preventDefault();
                window.location.href = '/health/ministry/login'
            });

        });
    </script>
</body>

</html>