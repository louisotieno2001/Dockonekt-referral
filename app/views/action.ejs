<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="icon.svg" type="image/x-icon" />
    <title>Confirm Action</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            text-align: center;
        }

        h1 {
            margin-bottom: 30px;
        }

        button {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            margin-bottom: 10px;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Confirm Action</h1>
        <button type="submit" id="referals">Referrals</button>

        <button type="submit" id="consultation">Consultation</button>

        <button type="submit" id="specimen">Specimen Movement</button>

    </div>
    <script>
        document.addEventListener('DOMContentLoaded', async function () {
            function getQueryParam(name) {
                const urlParams = new URLSearchParams(window.location.search);
                return urlParams.get(name);
            }

            const facilityPath = getQueryParam('accessPath');

            console.log(facilityPath);

            const referals = document.getElementById('referals');
            const consultation = document.getElementById('consultation');
            const specimen = document.getElementById('specimen');

            referals.addEventListener('click', async (e) => {
                e.preventDefault();
                const queryParams = new URLSearchParams({
                    facilityPath: facilityPath,
                });
                window.location.href = '/referral?' + queryParams.toString();
            });

            consultation.addEventListener('click', async (e) => {
                e.preventDefault()
                const queryParams = new URLSearchParams({
                    facilityPath: facilityPath,
                });
                window.location.href = '/consultation?'+ queryParams.toString();
            });

            specimen.addEventListener('click', async (e) => {
                e.preventDefault()
                const queryParams = new URLSearchParams({
                    facilityPath: facilityPath,
                });
                window.location.href = '/specimen-movement?'+ queryParams.toString();
            });
        });
    </script>
</body>

</html>