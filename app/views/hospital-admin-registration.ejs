<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Healthcare Registration</title>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #0c1e3e;
            /* Dark blue background */
            color: #fff;
            /* White text color */
        }

        .container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            max-width: 600px;
            width: 100%;
            padding: 2px;
            align-content: center;
            border-radius: 8px;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            padding: .8em;
        }

        button[type="submit"] {
            background-color: #00ffcc;
            color: #0c1e3e;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #00e6b8;
        }

        .input-div {
            border-radius: 15px;
            padding: .5em;
            background-color: rgba(0, 0, 0, 0.9);
            margin: 8px;
            display: flex;
            align-items: center;
            width: 500px;
            opacity: 90%;
            margin-left: -35px;
        }

        input {
            background: transparent;
            border: none;
            outline: none;
            font-size: larger;
            color: #00e676;
        }

        input:focus {
            border: none;
        }

        span {
            margin-right: 10px;
            /* color: #00e676; */
            color: #fff;
        }

        #pass-visibility {
            margin-left: 185px;
            cursor: pointer;
            background-color: rgba(0, 0, 0, 0.9);
            opacity: 90%;
            border-radius: 15px;
        }

        form {
            margin: 0 auto;
            width: 75%;
        }

        button {
            margin: 0 auto;
            width: 65%;
            margin-left: 70px;
            padding: 1em;
        }

        #login {
            color: #00e676;
            cursor: pointer;
        }

        h3 {
            text-align: center;
        }

        .suggestions-div {
            background-color: rgba(0, 0, 0, 0.9);
            opacity: 95%;
            border-radius: 8px;
            margin-top: -5px;
            z-index: 1000;
            position: fixed;
            width: 80%;
            max-height: 200px;
            overflow-y: auto;
        }

        #suggestions {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        #suggestions li {
            cursor: pointer;
            padding: 5px;
            margin: 15px;
            color: #00e676;
        }

        #suggestions li:hover {
            background-color: #535151;
            border-radius: 8px;
        }

        .response {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        #error {
            color: red;
            text-align: center;
            width: max-content;
        }

        #success {
            color: green;
            text-align: center;
            width: max-content;
        }

        #pass-error {
            color: red;
        }

        #email-error {
            color: red;
        }

        #phone-error {
            color: red;
        }

        #name-error {
            color: red;
        }

        /* Styles for small screens */
        @media only screen and (max-width: 600px) {
            .container {
                padding: 1px;
                max-width: 330px;
            }

            .input-div {
                width: 90%;
                margin: 10px;
            }


            form {
                margin: 70 auto;
                width: 100%;
                margin-left: -5px;
            }

            #pass-visibility {
                margin-left: -35px;
                cursor: pointer;
            }

            button {
                margin: 2 auto;
                width: 65%;
                margin-left: 55px;
                padding: 1em;
                margin-bottom: 5px;
            }

            h3 {
                text-align: center;
                margin-left: 6px;
            }

            .suggestions-div {
                background-color: rgba(0, 0, 0, 0.9);
                opacity: 95%;
                border-radius: 8px;
                margin-top: -10px;
                z-index: 1000;
                position: fixed;
                width: 100%;
                max-height: 200px;
                overflow-y: auto;
            }
            .submenu {
                position: absolute;
                top: 100px;
                right: 2px;
                left: 0px;
                background-color: #0c1e3e;
                padding: 10px;
                display: none;
                width: 100%;
                z-index: 1500;
            }

            .info {
                padding-left: 1em;
            }

        }
    </style>
</head>

<body>
    <div class="container">
        <h2>Healthcare Registration</h2>
        <form id="registrationForm" action="/register" method="POST">
            <div class="input-div">
                <span class="material-symbols-outlined">
                    account_circle
                </span>
                <input type="text" id="fullName" name="fullName" required placeholder="Name">
            </div>
            <p class="info" id="name-error"></p>
            <div class="input-div">
                <span class="material-symbols-outlined">
                    mail
                </span>
                <input type="email" id="email" name="email" required placeholder="Email">
            </div>
            <p class="info" id="email-error"></p>
            <div class="input-div">
                <span class="material-symbols-outlined">
                    phone_enabled
                </span>
                <input type="tel" name="phone" id="phone" placeholder="Phone" required>
            </div>
            <p class="info" id="phone-error"></p>
            <div class="value-suggestions">
                <div class="input-div">
                    <span class="material-symbols-outlined">
                        local_hospital
                    </span>
                    <input type="text" name="hospital" id="hospital" placeholder="Hospital name" required>
                </div>
                <div class="suggestions-div">
                    <ul id="suggestions"></ul>
                </div>
            </div>
            <div class="input-div">
                <span class="material-symbols-outlined">
                    security
                </span>
                <input type="password" name="" id="password" placeholder="Password" required>
                <span class="material-symbols-outlined" id="pass-visibility">
                    visibility
                </span>
            </div>
            <p class="info" id="pass-error"></p>
            <button type="submit" id="submit">Register</button>
            <h3>Already have an account? <span id="login">Login</span></h3>
        </form>
        <div class="response">
            <p id="success"></p>
            <p id="error"></p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const submitBtn = document.getElementById('submit');
            const toggleVisibility = document.getElementById('pass-visibility');
            const passField = document.getElementById('password');
            const loginLink = document.getElementById('login');
            const errorDisplay = document.getElementById('error');
            const successDisplay = document.getElementById('success');
            const nameError = document.getElementById('name-error');
            const emailError = document.getElementById('email-error');
            const phoneError = document.getElementById('phone-error')
            const passError = document.getElementById('pass-error');

            // Function to handle name validation and display error messages
            function validateName(name) {
                const result = sanitizeName(name);

                if (!result.isValid) {
                    nameError.innerHTML = result.errorMessage;
                } else {
                    nameError.innerHTML = ''; // Clear error message if the name is valid
                }
            }

            // Example usage
            const nameInput = document.getElementById('fullName');
            nameInput.addEventListener('input', function () {
                validateName(nameInput.value);
            });

            // Function to handle phone number validation and display error messages
            function validatePhoneNumber(phoneNumber) {
                const result = sanitizePhoneNumber(phoneNumber);

                if (!result.isValid) {
                    phoneError.innerHTML = result.errorMessage;
                } else {
                    phoneError.innerHTML = ''; // Clear error message if the phone number is valid
                }
            }

            // Example usage
            const phoneInput = document.getElementById('phone');
            phoneInput.addEventListener('input', function () {
                validatePhoneNumber(phoneInput.value);
            });


            function validateEmail(email) {
                const result = sanitizeEmail(email);

                if (!result.isValid) {
                    emailError.innerHTML = result.errorMessage;
                } else {
                    emailError.innerHTML = '';
                }
            }

            // Example usage
            const emailInput = document.getElementById('email');
            emailInput.addEventListener('input', function () {
                validateEmail(emailInput.value);
            });


            function validatePassword(password) {
                const result = isStrongPassword(password);

                if (!result.isValid) {
                    passError.innerHTML = result.reason;
                } else {
                    passError.innerHTML = '';
                }
            }

            const passwordField = document.getElementById('password');
            passwordField.addEventListener('input', function () {
                validatePassword(passwordField.value);
            });

            submitBtn.addEventListener('click', async (e) => {
                e.preventDefault();

                const fullName = document.getElementById('fullName').value.trim();
                const email = document.getElementById('email').value.trim();
                const phone = document.getElementById('phone').value.trim();
                const hospital = document.getElementById('hospital').value.trim();
                const password = document.getElementById('password').value.trim();

                 // Validation
                 const nameResult = sanitizeName(fullName);
                const emailResult = sanitizeEmail(email);
                const phoneResult = sanitizePhoneNumber(phone);
                const passwordResult = isStrongPassword(password);

                let isValid = true;

                // Check if each field passed validation
                if (!nameResult.isValid) {
                    nameError.innerHTML += `<p>${nameResult.errorMessage}</p>`;
                    isValid = false;
                }

                if (!emailResult.isValid) {
                    emailError.innerHTML += `<p>${emailResult.errorMessage}</p>`;
                    isValid = false;
                }

                if (!phoneResult.isValid) {
                    phoneError.innerHTML += `<p>${phoneResult.errorMessage}</p>`;
                    isValid = false;
                }

                if (!passwordResult.isValid) {
                    passError.innerHTML += `<p>${passwordResult.reason}</p>`;
                    isValid = false;
                }

                // If any field is invalid, stop form submission
                if (!isValid) {
                    return;
                }

                try {
                    const response = await fetch('/hospital-admin-register', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            fullName: nameResult.sanitizedName,
                            email: emailResult.sanitizedEmail,
                            phone: phoneResult.sanitizedPhoneNumber,
                            hospital: hospital,
                            password: password
                        })
                    });

                    if (response.ok) {
                        // Registration successful
                        successDisplay.innerHTML = 'Registration successful', response.statusText;
                        window.location.href = '/hospital/admin/login';
                    } else {
                        // Registration failed
                        console.error('Registration failed:', response.statusText);
                        // Handle the error accordingly
                        errorDisplay.innerHTML = 'Registration failed:', response.statusText;
                    }
                } catch (error) {
                    console.error('Error during registration:', error);
                    // Handle the error accordingly
                    errorDisplay.innerHTML = 'Error during registration:', error;
                }
            });

            toggleVisibility.addEventListener('click', async (e) => {
                e.preventDefault();
                passField.type = passField.type === 'password' ? 'text' : 'password';
            });

            loginLink.addEventListener('click', async (e) => {
                e.preventDefault();
                window.location.href = '/hospital/admin/login'
            });

            const inputField = document.getElementById('hospital');
            const suggestionsList = document.getElementById('suggestions');

            inputField.addEventListener('input', async function () {
                const userInput = this.value.trim();
                if (!userInput) {
                    suggestionsList.innerHTML = ''; // Clear suggestions if input is empty
                    return;
                }

                try {
                    const response = await fetch('/facilities');
                    const facilitiesData = await response.json();
                    const facilityNames = facilitiesData.facilities.map(facility => facility.name.trim());

                    const matchedFacilities = facilityNames.filter(name => name.toLowerCase().includes(userInput.toLowerCase()));

                    // Display suggestions
                    suggestionsList.innerHTML = '';
                    matchedFacilities.forEach(facility => {
                        const listItem = document.createElement('li');
                        listItem.textContent = facility;
                        suggestionsList.appendChild(listItem);

                        // Add click event listener to list item
                        listItem.addEventListener('click', function () {
                            // Set the value of the Hospital name field
                            inputField.value = facility;
                            // Clear suggestions
                            suggestionsList.innerHTML = '';
                        });
                    });
                } catch (error) {
                    console.error('Error fetching facilities:', error);
                    errorDisplay.innerHTML = 'Error fetching facilities:', error;
                }
            });

        });
    </script>
    <script src="/javascript/sanitize.js"></script>
</body>

</html>